<Window x:Class="PartnersApp.AuthWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Авторизация" Height="350" Width="400" 
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#FF2E2E2E">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <TextBlock Text="Логин" Foreground="White" FontSize="16" Margin="0,0,0,5"/>
            <TextBox x:Name="LoginTextBox" FontSize="16" Margin="0,0,0,15"/>
            <TextBlock Text="Пароль" Foreground="White" FontSize="16" Margin="0,0,0,5"/>
            <PasswordBox x:Name="PasswordBox" FontSize="16" Margin="0,0,0,20"/>
            <Button Content="Войти" Click="Login_Click" 
                    Background="#FF383838" Foreground="White" 
                    FontSize="16" Height="40" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>