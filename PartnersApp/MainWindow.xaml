<Window x:Class="PartnersApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Управление партнерами" Height="600" Width="1000"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Background="#FF2E2E2E" 
                    Height="60" VerticalAlignment="Center">
            <Image Source="/Resources/logo_small.png" Height="40" Margin="10,0,0,0"/>
            <TextBlock Text="Управление партнерами" Foreground="White" 
                       FontSize="20" VerticalAlignment="Center" Margin="20,0,0,0"/>
        </StackPanel>

        <TabControl Grid.Row="1" Margin="10">
            <TabItem Header="Партнеры">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Добавить" Width="100" Height="30" Margin="0,0,10,0"
                                Click="AddPartnerButton_Click" IsEnabled="{Binding IsAdmin, Mode=OneWay}"/>
                        <Button Content="Редактировать" Width="100" Height="30" Margin="0,0,10,0"
                                Click="EditPartnerButton_Click" IsEnabled="{Binding IsAdmin, Mode=OneWay}"/>
                        <Button Content="Удалить" Width="100" Height="30" Margin="0,0,10,0"
                                Click="DeletePartnerButton_Click" IsEnabled="{Binding IsAdmin, Mode=OneWay}"/>
                        <Button Content="История продаж" Width="120" Height="30"
                                Click="ShowSalesHistoryButton_Click"
                                IsEnabled="{Binding SelectedPartner, Converter={StaticResource NullToBooleanConverter}, Mode=OneWay}"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" x:Name="PartnersDataGrid" AutoGenerateColumns="False"
                              IsReadOnly="True" SelectionMode="Single" ItemsSource="{Binding Partners}"
                              SelectedItem="{Binding SelectedPartner}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding PartnerId}" Width="Auto"/>
                            <DataGridTextColumn Header="Тип" Binding="{Binding PartnerTypeName}" Width="*"/>
                            <DataGridTextColumn Header="Наименование" Binding="{Binding PartnerName}" Width="*"/>
                            <DataGridTextColumn Header="Директор" Binding="{Binding DirectorName}" Width="*"/>
                            <DataGridTextColumn Header="Телефон" Binding="{Binding Phone}" Width="*"/>
                            <DataGridTextColumn Header="Рейтинг" Binding="{Binding Rating}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="Продукция">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                        <Button Content="Добавить" Width="100" Height="30" Margin="0,0,10,0"
                                Click="AddProductButton_Click" IsEnabled="{Binding IsAdmin, Mode=OneWay}"/>
                        <Button Content="Редактировать" Width="100" Height="30" Margin="0,0,10,0"
                                Click="EditProductButton_Click" IsEnabled="{Binding IsAdmin, Mode=OneWay}"/>
                        <Button Content="Удалить" Width="100" Height="30"
                                Click="DeleteProductButton_Click" IsEnabled="{Binding IsAdmin, Mode=OneWay}"/>
                    </StackPanel>

                    <DataGrid Grid.Row="1" x:Name="ProductsDataGrid" AutoGenerateColumns="False"
                              IsReadOnly="True" SelectionMode="Single" ItemsSource="{Binding Products}">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="ID" Binding="{Binding ProductId}" Width="Auto"/>
                            <DataGridTextColumn Header="Наименование" Binding="{Binding ProductName}" Width="*"/>
                            <DataGridTextColumn Header="Цена" Binding="{Binding Price}" Width="Auto"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <StatusBar Grid.Row="2" Background="#FF2E2E2E" Foreground="White">
            <StatusBarItem>
                <TextBlock>
                    <Run Text="Режим: "/>
                    <Run Text="{Binding IsAdmin, Converter={StaticResource BooleanToModeConverter}, Mode=OneWay}"/>
                    <Run Text=" | Общий объем продаж: "/>
                    <Run Text="{Binding TotalSales, StringFormat={}{0:N2}, Mode=OneWay}"/>
                    <Run Text=" | Скидка: "/>
                    <Run Text="{Binding Discount, Mode=OneWay}"/>
                    <Run Text="%"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</Window>