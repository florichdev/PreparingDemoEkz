<Window x:Class="AdmFlorichWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AdmFlorichWpf"
        mc:Ignorable="d"
        Title="Админ-панель" Height="450" Width="800">
    <DockPanel Background="#FF4D4D4D">
        <Grid Background="#FF4D4D4D">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Left">
                <Button Content="Добавить" Click="AddUser_Click" Width="120" Margin="0,0,10,0" IsEnabled="{Binding IsRole}" Background="White" Foreground="Black"></Button>
                <Button Content="Редактировать" Click="EditUser_Click" Width="120" Margin="0,0,10,0" IsEnabled="{Binding IsRole}" Background="White" Foreground="Black"></Button>
                <Button Content="Удалить" Click="DeleteUser_Click" Width="120" Margin="0,0,10,0" IsEnabled="{Binding IsRole}" Background="White" Foreground="Black"></Button>
                <Button Content="Excel" Click="ExportExcel_Click" Width="70" Margin="0,0,5,0" Background="White" Foreground="Black"/>
            </StackPanel>

            <DataGrid Grid.Row="1" x:Name="MainGrid" SelectionChanged="MainGrid_SelectionChanged" 
          AutoGenerateColumns="False" Background="#FF4D4D4D" SelectionMode="Single" IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding UserId}" Width="Auto"/>
                    <DataGridTextColumn Header="Логин" Binding="{Binding Username}" Width="*"/>
                    <DataGridTextColumn x:Name="PasswordColumn" Header="Пароль" Binding="{Binding Password}" Width="*"/>
                    <DataGridTextColumn Header="Роль" Binding="{Binding Role}" Width="*"/>
                    <DataGridTextColumn Header="Отец" Binding="{Binding Family.Father}" Width="*"/>
                    <DataGridTextColumn Header="Мать" Binding="{Binding Family.Mother}" Width="*"/>
                    <DataGridTextColumn Header="Жена" Binding="{Binding Family.Wife}" Width="*"/>
                    <DataGridTextColumn Header="Дети" Binding="{Binding Family.Childs}" Width="*"/>
                </DataGrid.Columns>
            </DataGrid>

        </Grid>
    </DockPanel>
</Window>
